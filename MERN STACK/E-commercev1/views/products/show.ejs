<% layout('/layouts/boilerplate') -%>

        <div class="row">
          <!-- left part -->
          <div class="col-12 col-lg-6">
            <div class="card mx-auto mt-5" style="width: 20rem;"  >
              <!-- <img style="height: 12rem;" src="<%= product.Image %>" class="card-img-top" alt="..."> -->
               <!-- carousel of images  -->
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="<%= product.Image %>" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="..." alt="Second slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="..." alt="Third slide">
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only"></span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only"></span>
                </a>
              </div>
              <div class="card-body mt-4"> 
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text">â‚¹<%= product.price %></p>
                <p class="card-text"><%= product.description %></p>
                <a href="/products/<%= product._id %>" class="btn btn-sm btn-primary">Buy Now</a>
                <a href="/products/<%= product._id %>" class="btn btn-sm btn-success">Add to Cart</a>
                <form class="d-inline" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-danger">Delete</button>
              </form>
                <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
              </div>
            </div>
          </div>
          <!-- right part -->
          <div class="col-12 col-lg-6">
               <div style="width: 20rem;" class="mx-auto">
                <p class="display-5 mt-4">Leave a review</p><br>
                <form action="/products/<%= product._id %>/reviews" method="POST">
                  <!-- <input name="rating" class="form-control" type="range" min="1" max="5"> <br><br> -->
                  <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>                  
                  <textarea name="text" class="form-control" rows="3"></textarea><br><br>
                  <button type="submit" class="btn btn-sm btn-success">Submit</button>
              </form>
              <div>
                <% for (let review of product.Review) { %>
                  <div class="card mt-4 mb-4">
                    <div class="card-body">
                      <!-- <h5 class="card-title"><%= review.rating %></h5> -->
                      <p class="starability-result" data-rating="<%= review.rating %>">
                        Rated: 3 stars
                      </p>
                      <p class="card-text"><%= review.text %></p>
                     <form action="">
                     <button class="btn btn-sm btn-danger">Delete</button>
                     </form>
                    </div>
                  </div>
                <% } %>
              </div>
           </div>
          </div>
        </div>

